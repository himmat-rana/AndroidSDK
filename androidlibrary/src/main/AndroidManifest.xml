<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.supportgenie.androidlibrary">

    <application>

        <activity android:name="io.supportgenie.androidlibrary.LibraryActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
                android:name="io.supportgenie.androidlibrary.view.main.ChatActivity"
                android:label="@string/title_activity_chat"
                android:theme="@style/AppTheme.NoActionBar"/>

        <activity
                android:name="io.supportgenie.androidlibrary.view.main.ImageZoomActivity"
                android:configChanges="orientation|keyboardHidden|screenSize|screenLayout"
                android:label="@string/title_activity_image"
                android:launchMode="singleTask"
                android:resizeableActivity="true"
                android:screenOrientation="fullSensor"
                android:theme="@style/AppTheme.NoActionBar"/>

        <activity
                android:name="io.supportgenie.androidlibrary.view.main.VideoActivity"
                android:configChanges="orientation|keyboardHidden|screenSize|screenLayout|smallestScreenSize|uiMode"
                android:label="@string/title_activity_video"
                android:launchMode="singleTask"
                android:resizeableActivity="true"
                android:screenOrientation="fullSensor"
                android:supportsPictureInPicture="true"
                android:theme="@style/AppTheme.NoActionBar"/>

        <activity
                android:name="io.supportgenie.androidlibrary.view.main.PdfViewerActivity"
                android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
                android:label="@string/title_activity_pdf"
                android:launchMode="singleTask"
                android:resizeableActivity="true"
                android:screenOrientation="fullSensor"
                android:supportsPictureInPicture="true"
                android:theme="@style/AppTheme.NoActionBar"/>

        <service
                android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
                android:enabled="true"/>

        <uses-library
                android:name="org.apache.http.legacy"
                android:required="false"/>

    </application>

</manifest>
